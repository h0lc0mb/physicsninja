<% provide(:title, @purchase.plan.name) %>
<h1>The Ninja is no longer accepting questions.</h1>
<center><h3>Purchasing is currently disabled.</h3></center>
<%#<h1><%= @purchase.plan.name %><%#/h1>
<h3>
	<center>
		Purchasing <%= pluralize(@purchase.plan.questions, "question") %><%# for $<%= @purchase.plan.price %><%#0
	</center>
</h3>
<br>
<section>
	<div class="row">
		<div class="span4 offset4">
			<%#= form_for(@purchase) do |f| %>
				<%#= render 'shared/error_messages', object: f.object %>

				<%#= f.hidden_field :user_id %>
				<%#= f.hidden_field :plan_id %>

				<%#= f.hidden_field :stripe_card_token %>

    		<%#div class="field">
    			<%= label_tag :card_number, "Credit Card Number " %>
    			<%#= text_field_tag :card_number, nil, name: nil %>
   			<%#/div>
  			<div class="field">
     			<%= label_tag :card_code, "Security Code on Card (CVV)" %>
     			<%#= text_field_tag :card_code, nil, name: nil %>
 				<%#/div>
 				<div class="field">
  				<%= label_tag :card_month, "Card Expiration" %>
  				<%#= select_month nil, {add_month_numbers_true: true}, {name: nil, id: "card_month"}%>
    			<%#= select_year nil, {start_year: Date.today.year, end_year: Date.today.year+15}, {name: nil, id: "card_year"}%>
  			<%#/div>

  			<div id="stripe_error">
  				<noscript>JavaScript is not enabled and is required for this form. First enable it in your web browser settings.</noscript>
  			</div#%>

        <%#**Processing can take a few seconds, so please click the button below only once**
  			<%# if @purchase.plan.id == 1 %>
  				<%#= f.submit "Initiate", class: "btn btn-large btn-primary" %>
  			<%# else %>
  				<%#= f.submit "Become a #{@purchase.plan.name}", class: "btn btn-large btn-primary" %>
  			<%# end %>
			<%# end %>
		<%#</div>
	</div>
</section>
<p>
	<center>
		All payments are processed safely and securely through <%= link_to "Stripe", "http://www.stripe.com", target: '_blank' %><%#.
	</center>
</p#%>