<%# provide(:title, @user.username) %>
<% if @user.ninja? %>
	<div class="row">
		<aside class="span4">
			<section>
        <%= render 'shared/user_info'%>
      </section>
      <br>
      <span>
      	<% if current_user?(@user) %>
      		<%= link_to "Answer more questions", root_path, class: "btn btn-large btn-primary" %>
      	<% end %>
      </span>
    </aside>
    <div class="span8">
      <h3>Questions with new comments <i>(<%= @new_comment_items.count %>)</i></h3>
        <ol class="questions">
          <%= render 'shared/new_comment' %>
        </ol>
        <br>
      </div>
      <div class="span8">
      <h3>All answered questions <i>(<%= @responded_items.count %>)</i></h3>
        <ol class="questions">
          <%= render 'shared/responded' %>
        </ol>
    </div>
  </div>
<% elsif @user.admin? && !@user.ninja %>
  <div class="row">
    <aside class="span4">
      <section>
        <%= render 'shared/user_info'%>
      </section>
    </aside>
    <div class="span8">
      <h3>TBD admin</h3>
    </div>
  </div>
<% else %>
	<div class="row">
		<aside class="span4">
      <section>
        <%= render 'shared/user_info'%>
      </section>
    </aside>
    <div class="span8">
      <h3>Answered questions <i>(<%= @answered_items.count %>)</i></h3>
        <ol class="questions">
          <%= render 'shared/answered' %>
        </ol>
        <br>
        <h3>Pending questions <i>(<%= @pending_items.count %>)</i></h3>
        <ol class="questions">
          <%= render 'shared/pending' %>
        </ol>
    </div>
  </div>
<% end %>